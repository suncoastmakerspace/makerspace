---
interface Props {
    title: string;
    description: string;
    link?: string;
    gradientFrom?: string;
    gradientTo?: string;
    icon?: 'lightbulb' | 'lightning' | 'beaker' | 'code' | 'robot';
}

const { 
    title, 
    description, 
    link = '/projects',
    gradientFrom = 'blue-400',
    gradientTo = 'indigo-500',
    icon = 'lightbulb'
    // ^ temp. will have to change this out with an image prop later
} = Astro.props;

// These are temp. We have to add actual images later, but for now this is a quick and easy way to make the cards look nice without needing to get a professional photographer or sum.
const icons = {
    lightbulb: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    lightning: 'M13 10V3L4 14h7v7l9-11h-7z',
    beaker: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z',
    code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
    robot: 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z'
};
---

<div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow">
    <div class={`h-48 bg-gradient-to-br from-${gradientFrom} to-${gradientTo} flex items-center justify-center`}>
        <svg class="w-20 h-20 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[icon]} />
        </svg>
    </div>
    <div class="p-6">
        <h3 class="font-bold text-xl mb-2 text-gray-900 line-clamp-2">{title}</h3>
        <p class="text-gray-600 mb-4 line-clamp-3">{description}</p>
        <a href={link} class="text-indigo-600 font-semibold hover:text-indigo-700">Learn more â†’</a>
    </div>
</div>