---
import MainLayout from '../layouts/Main.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Link from '../components/Link.astro';
import ServiceCarousel from '../components/ServiceCarousel.astro';

const services = [
    {
        title: 'Electronics',
        description: 'Design and build circuits, from simple LEDs to complex microcontroller projects.',
        gradient: 'blue' as const,
        icon: 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z'
    },
    {
        title: 'Robotics',
        description: 'Program and assemble robots using Arduino, Raspberry Pi, and various sensors.',
        gradient: 'purple' as const,
        icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z'
    },
    {
        title: 'Programming',
        description: 'Learn coding through practical projects, from embedded systems to web development.',
        gradient: 'green' as const,
        icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'
    }
];
---

<MainLayout title="Home">
    <!-- TEMP QUOTES AND WHATNOT (idk man) -->
    <section class="relative bg-linear-to-br from-indigo-600 via-purple-600 to-indigo-800 text-white py-18 md:py-26 overflow-hidden">

        <!-- Glow orbs (matching about page) -->
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-purple-500 rounded-full opacity-20 blur-3xl pointer-events-none"></div>
        <div class="absolute -bottom-16 -left-16 w-72 h-72 bg-indigo-400 rounded-full opacity-20 blur-3xl pointer-events-none"></div>

        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <div class="text-center">

                <h1 class="text-4xl md:text-6xl font-bold mb-6">
                    Build. Create. Innovate.
                </h1>

                <p class="text-xl md:text-2xl mb-8 text-indigo-100 max-w-3xl mx-auto">
                    Where ideas come to life through electronics, robotics, and hands-on engineering.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 justify-center">

                    <Link href="/projects" class="bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 active:scale-95 transition-all duration-150 relative z-10">
                        View Our Projects
                    </Link>

                    <Link href="/contact" class="bg-white/10 border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-indigo-600 active:scale-95 transition-all duration-150 backdrop-blur-sm relative z-10">
                        Contact Us
                    </Link>

                </div>

            </div>

        </div>
        
        <!-- Wavy thing I lowkey copied off of a website -->
        <div class="absolute bottom-0 left-0 right-0">
            <svg viewBox="0 0 1435 120" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
            </svg>
        </div>
    </section>

    <!-- WHAT WE DO SECTION - CAROUSEL -->
    <section class="py-20 bg-white">

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 text-gray-900">What We Do</h2>

            <p class="text-gray-600 text-center max-w-2xl mx-auto mb-12">
                We focus on hands-on learning through real projects and collaborative builds.
            </p>

            <ServiceCarousel services={services} />

        </div>
    </section>

    <!-- We literally have zero projects lmao -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Projects</h2>

                <p class="text-gray-600 text-lg">
                    A few examples of what we're building and experimenting with
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <ProjectCard 
                    title = "TEMP PROJECT 1"
                    description ="TEMP DESCRIPTION 1."
                    gradient = "blue"
                    icon = "lightbulb"
                />

                <ProjectCard 
                    title = "TEMP PROJECT 2"
                    description = "TEMP DESCRIPTION 2."
                    gradient = "purple"
                    icon = "lightning"
                />

                <ProjectCard 
                    title = "TEMP PROJECT 3"
                    description = "TEMP DESCRIPTION 3."
                    gradient = "green"
                    icon = "robot"
                />
            </div>

            <div class="text-center mt-12">
                <Link href="/projects" class="inline-block bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 active:scale-95 transition-all duration-150">
                    View All Projects
                </Link>
            </div>
        </div>
    </section>

    <!-- Please change this, this is so corny :sob: -->
    <section class="relative bg-linear-to-br from-indigo-600 via-purple-600 to-indigo-800 text-white py-20 overflow-hidden">

        <!-- Glow orbs (matching about page CTA) -->
        <div class="absolute -top-20 -right-20 w-80 h-80 bg-purple-400 rounded-full opacity-20 blur-3xl pointer-events-none"></div>
        <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-indigo-400 rounded-full opacity-20 blur-3xl pointer-events-none"></div>

        <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                New here?
            </h2>

            <p class="text-xl mb-8 text-indigo-100">
                Learn how Makerspace works and how to get involved.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Link href="/about" class="inline-block bg-white text-indigo-700 px-8 py-3 rounded-lg font-bold hover:bg-indigo-50 active:scale-95 transition-all duration-150 shadow-lg">
                    About Us
                </Link>
                <Link href="/contact" class="inline-block bg-white/10 text-white px-8 py-3 rounded-lg font-bold border border-white/30 hover:bg-white/20 active:scale-95 transition-all duration-150 backdrop-blur-sm">
                    Get in Touch â†’
                </Link>
            </div>

        </div>

    </section>

</MainLayout>
